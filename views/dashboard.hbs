    <div class="container">
      <header class="main-header">
        <div class="brand">
          <h1>Coin<span class="accent">2</span>Flow</h1>
          <p class="tagline">The One Step Solution</p>
        </div>
        <div class="auth-buttons">
          <a href="/login" class="btn btn-primary">Login</a>
          <a href="/signup" class="btn btn-outline">Sign Up</a>
        </div>
      </header>
      <section class="hero">
        <div class="hero-content">
          <p class="hero-text">We are glad to serve you with the best.
            <span>Please! Sign-up For Free</span>
          </p>
          <img src="../assets/PageImg.png" alt="Banking Services" class="hero-image" />
          <button class="btn btn-primary btn-large">About Us</button>
          <a href="/bankForm" class="btn btn-primary" id="openAccountButton">Open Account</a>
        </div>
      </section>
      <section class="services">
        <div class="card-grid">
          <article class="service-card">
            <img src="../assets/Education.jpg" alt="Home Loan" class="card-image" />
            <div class="card-content">
              <span class="card-tag">Home Loan</span>
              <h2 class="card-title">Get Your Dream Home</h2>
              <p class="card-description">Get Your Home Loan with some easy
