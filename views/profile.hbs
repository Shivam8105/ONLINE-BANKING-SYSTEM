<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="/profile.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
  <script src="https://kit.fontawesome.com/ab56d9cd66.js" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <header>
    <div class="navbar">
      <nav>
        <div class="headerbtn">

          <a href="/dashboard" class="btn btn-primary">Dashboard</a>
          <a href="/transactions" class="btn btn-primary">Transactions</a>

          {{#if username}}
          <a href="/logout" id="logout" class="btn btn-warning">Logout</a>
          {{else}}
          <!-- Login Button -->
          <a href="/login" id="login" class="btn btn-warning">Login</a>
          {{/if}}

        </div>

        <!-- Displaying Username and Profile Picture -->
        <div class="user-info">
          {{#if username}}
          <div class="user-details grid text-center">
            <!-- Displaying Profile Picture and Username -->
            <img src="{{profilePicture}}" alt="Profile Picture" class="user-profile-picture rounded-circle g-col-6">
            <span id="headname" class="g-col-6">{{username}}</span>
          </div>
          {{/if}}
        </div>
      </nav>
    </div>
  </header>

  <main>
    <div class="profile-container">
      <!-- User Info Section -->
      <div class="profile-box">
        <div class="profile-header">
          <div class="profile-image-container">
            <!-- Display profile picture or default if not available -->
            <img src="{{profilePicture}}" alt="Profile Picture" class="profile-picture" id="profileImage">
          </div>
          <h1 id="username">{{username}}</h1>
        </div>
        <div class="profile-details">
          <div class="info-row">
            <i class="fas fa-envelope"></i>
            <p><strong>Email:</strong> <span id="email">{{email}}</span></p>
          </div>
          <div class="info-row">
            <i class="fas fa-phone-alt"></i>
            <p><strong>Phone:</strong> <span id="phone">{{phone}}</span></p>
          </div>
          <div class="info-row">
            <i class="fas fa-venus-mars"></i>
            <p><strong>Gender:</strong> <span id="gender">{{gender}}</span></p>
          </div>
          <div class="info-row">
            <i class="fas fa-calendar-alt"></i>
            <p><strong>Date of Birth:</strong> <span id="DOB">{{DOB}}</span></p>
          </div>
          <div class="info-row">
            <i class="fas fa-wallet"></i>
            <p><strong>Initial Deposit:</strong> ₹<span id="initialDeposit">{{initialDeposit}}</span></p>
          </div>
        </div>
      </div>

      <!-- Bank Info Section -->
      <div class="bank-info-box">
        <div class="bank-info-header">
          <h2>Bank Information</h2>
        </div>
        <div class="bank-info-details">
          <p><strong>Account Number:</strong> <span id="accountNumber">{{accountNumber}}</span></p>
          <p><strong>IFSC Code:</strong> <span id="ifscCode">{{ifscCode}}</span></p>
          <p><strong>Balance:</strong> ₹<span id="balance">{{balance}}</span></p>
        </div>
      </div>
    </div>
  </main>

  <footer>
    <p>&copy; 2024 Banking System. All rights reserved.</p>
  </footer>

  <!-- Link to your separate JS file -->
  <script src="/profile.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>